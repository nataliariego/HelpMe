<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpMe" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <!-- Customize your theme here. -->
        <!-- Transiciones -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right  </item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoTextBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--    Spash Screen Theme -->
    <style name="SpashScreen" parent="Theme.HelpMe">
        <item name="android:windowBackground">@drawable/spashscreen</item>
    </style>

    <!-- Esquinas redondeadas -->
    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>
</resources>